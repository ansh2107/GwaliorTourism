<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="8dp"
card_view:cardCornerRadius="1dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.eugene.fithealth.TestingForSO">


    <ImageView
        android:id="@+id/img_android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:scaleType="centerCrop"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/tv_android"
        android:background="#50000000"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="Hello World!"
        android:id="@+id/timings"
        android:textColor="#fff"
        android:textSize="22dp"/>


    <TextView
        android:id="@+id/tv_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_android"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:text="Random Text Blah Blah Blah"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_android"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:text="Random Text Blah Blah Blah jvbjhgggggvhghbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbbb"
        android:maxLength="90"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_android"
        android:layout_marginBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:text="Random Text Blah"
        android:maxLength="90"
        android:textSize="16dp"/>


</RelativeLayout>
</android.support.v7.widget.CardView>